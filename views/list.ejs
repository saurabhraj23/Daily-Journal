<%-include("partials/header");-%>

<div class="background">
  <div class="container">
    <div class="screen">
      <div class="screen-header">
        <div class="screen-header-left">
          <div class="screen-header-button close"></div>
          <div class="screen-header-button maximize"></div>
          <div class="screen-header-button minimize"></div>
        </div>
        <div class="screen-header-right">
          <div class="screen-header-ellipsis"></div>
          <div class="screen-header-ellipsis"></div>
          <div class="screen-header-ellipsis"></div>
        </div>
      </div>
      <div class="screen-body">
        <div class="screen-body-item left">
          <div class="app-title">
            <span>To-Do</span>
            <span>List</span>
          </div>
        <div class="screen-body-item">
          <div class="app-form">
            <div class="app-form-group todo">

              <div class="app-form-control center">
                <h1> <%= listTitle %></h1>
                <h6> <%= date %> </h6>
              </div>
            </div>

                <% newListItems.forEach(function(e){ %>
                  <%if(e.name==null){%>
                    <%return;%>
                  <%}else {%>
                    <form action="/delete0" method="post">
                        <div class="list">
                      <input type="checkbox" name="checkbox" value="<%=e._id%>" onChange="this.form.submit()">
                      <p><%=  e.name  %></p>
                    </div>
                    <input type="hidden" name="listName" value="<%=listTitle %>">
                    <br>
                    </form>


                  <% }}) %>

                  <form action="/todolist" method="post">
                    <div class="app-form-group">
                      <input class="app-form-control" type="text" name="newItem" placeholder="New Item" required ="true" autocomplete="off">
                    </div>
                    <div class="app-form-group buttons">
                      <button class="app-form-button" type="submit" name="list" value="<%=listTitle%>">Submit</button>
                    </div>
                  </form>
          </div>
            </div>

          </div>
        </div>
      </div>
    </div>

  </div>

<%-include("partials/footer");-%>
